<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@color/color_00A89A">

    <ImageView
        android:id="@+id/img_check_title_bar"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:src="@drawable/icon_column" />

    <TextView
        android:id="@+id/txt_title_title_bar"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="标题"
        android:textColor="@color/color_FFFFFF"
        android:textSize="@dimen/s18" />

    <TextView
        android:id="@+id/txt_title_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:paddingLeft="@dimen/d10"
        android:paddingRight="@dimen/d15"
        android:text="右标题"
        android:textColor="@color/color_FFFFFF"
        android:textSize="@dimen/s14" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/color_DEDEDE" />

</RelativeLayout>